doctype html
html(lang='en')
    head
        title Jade
        meta(charset='utf-8')
        meta(name='author', content='Ebubekir Ogden')
        meta(name='viewport', content='initial-scale=1.0, maximum-scale=1.0, user-scalable=no, minimum-scale=1.0, height=device-height, width=device-width')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    body
        h1 Jade - node template engine
        #container.col
            p You are amazing
            p
                jade is a terse and simple
                templating language with a
                strong focus on performance
                and powerful features.
        h5 Genres

        ul
          for genre in genres
            li= genre.name
          else
            li sorry, no genre!

        for book in books
          .row
              .col-xs-12.col-sm-12.col-md-12.col-lg-12
                  .media.center-block
                      .media-left
                          img.media-object.img-rounded.center-block(src=book.imgUrl, alt='', style='z-index:99999')
                      .media-body
                          h4.media-heading= book.title
                          h5(style='color: black;')=book.genre
                          h5(style='color: black;')=book.description
                          h5(style='color: black;')=book.pages
                          h5(style='color: black;')
                              a(href=book.buyUrl, target='_blank') Go Buy!
                  hr
        else
          li sorry, no book!
